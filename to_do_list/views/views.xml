    <record id="to_do_list_view_kanban" model="ir.ui.view">
      <field name="name">to_do_list.view.kanban</field>
      <field name="model">to_do_list.task</field>
      <field name="arch" type="xml">
        <kanban string="Judul" default_group_by="check">
          <templates>
            <t t-name="kanban-box">
              <div><field name="check" /></div>
              
              <div><field name="title" /></div>
              <div><field name="description" /></div>
              <div><field name="date_creation" /></div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    <record id="to_do_list_action" model="ir.actions.act_window">
      <field name="name">to_do_list</field>
      <field name="res_model">to_do_list.task</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>
    <menuitem
      id="to_do_list_menu"
      name="to_do_list"
      sequence="10"/>
      <menuitem
        id="task_menu"
        name="task"
        action="to_do_list_action"
        parent="to_do_list_menu"
        sequence="20"/>
  </data>
</odoo>